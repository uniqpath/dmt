function offset_towards_center(){
  local text="$1"
  local COLS="$2"

  local len=${#text}

  local offset=$((($COLS-$len)/2))

  local i=0

  while [ $i -lt $offset ]; do
    echo -n " "
    i=$(($i+1))
  done
}

