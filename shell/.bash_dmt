  local dir="$DMT_PATH/etc/scripts/prepare_apps_and_user_engine"

  cd "$dir"
  ./prepare_apps

  cd "$dir"
  ./prepare_user_engine

  cd "$cwd"

  local CUSTOM_PREPARE_ENGINE_SCRIPT="$DMT_THIS_DEVICE/scripts/prepare_engine"

  if [ -f "$CUSTOM_PREPARE_ENGINE_SCRIPT" ]; then
    "$CUSTOM_PREPARE_ENGINE_SCRIPT"
