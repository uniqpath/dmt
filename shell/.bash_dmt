      mv "$DMT_PATH/user" "$backup_dir"
    else
      printf "${RED}Aborting due to existing directory - ${backup_dir} ${NC}\n"
      return
    fi
  fi

  if [ -d "$DMT_PATH/state" ]; then
    local backup_dir="$HOME/dmt-state-backup"
