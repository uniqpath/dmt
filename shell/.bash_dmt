  if [ ! -d "$user_dir" ]; then
    # this should never happen but just in case we put it here!
    printf "‚ö†Ô∏è  ${YELLOW}~/.dmt/user ${RED}directory is missing, did you run ${GREEN}cd ~/.dmt && ./install ${NC}?${NC}\n"
    cd "$cwd"
    # cannot use exit here because script is sourced!
