alias clone="git clone"

function cclone {
  local tmp
  if macos; then
    tmp=$(mktemp -t git)
  else
    tmp=$(mktemp)
  fi

  local repo_name

  git clone "$@" --progress 2>&1 | tee $tmp
  repo_name=$(awk -F\' '/Cloning into/ {print $2}' $tmp)
  rm $tmp
  cd "$repo_name"
}

