#!/bin/bash

YELLOW='\033[0;33m'
GREEN='\033[0;32m'
RED='\033[0;31m'
BLUE='\033[0;94m'
CYAN='\e[0;36m'
MAGENTA='\033[0;35m'
GRAY='\e[1;30m'
WHITE='\e[33;97m'
NC='\033[0m' # No Color

DEFAULT_DAEMON="dmt-proc"

function manage_daemon {
  local command="$1"
  local daemon_process="$2"

  local DMT_CORE="$HOME/.dmt/core"
  local DAEMONS_PATH="${DMT_CORE}/node/controller/processes"
  local DAEMON_MANAGER="${DAEMONS_PATH}/manager.js"

  if [ ! -f "$DAEMON_MANAGER" ]; then
    printf "âš ï¸  ERROR ${RED}DAEMON_MANAGER is not present${NC} at ${DAEMON_MANAGER}${NC}\n"
    if [ ! -d "$DMT_CORE" ]; then
      printf "âš ï¸  ERROR ${RED}it seems that the entire ~/.dmt/core directory is missing${NC} (maybe failed ${CYAN}dmt next${NC} on windows because of windows permission bug? If yes, then try: ${GREEN}dmt next --force${NC} once again).${NC}\n"
    fi
    # echo "Missing daemons code in dmt-core, please get the code from GitHub"
    exit
  fi

  local cwd=`pwd`
  cd "$DAEMONS_PATH"

  local node_path="node"

  if [ -n "$NODE_PATH" ]; then
    # see ~/.dmt/etc/onboot/linux-systemd-launch-script/dmt-proc.service, namely:
    # ...
    # Environment="NODE_PATH=/home/user/n/bin/node"
    # ExecStart=/home/user/.dmt/etc/onboot/onboot
    # ...
    node_path="$NODE_PATH"
  fi

  # TERM=xterm is needed for colors to work when started from cron job -- and actually always since we replaced colors with chalk because it's more sensitive
  # chalk requires FORCE_COLOR because we're in tty=false here and will get no colors otherwise
  # https://github.com/chalk/chalk/blob/main/source/vendor/supports-color/index.js#L83
  FORCE_COLOR=true TERM=xterm-256color NODE_ENV=production "$node_path" --unhandled-rejections=strict "$DAEMON_MANAGER" "$command" "${daemon_process}.js"

  # should not happen - but it can if there is a bug in dmt/notify
  # manager.js imports dmt/notify
  # when there was a bug in one of DMT notifiers (lib2)
  # this failed silently when trying to update remote devices
  if [ $? -ne 0 ]; then
    #echo
    local msg="âš ï¸ ðŸ’€ Daemon manager problem â€” ${NC}execute ${YELLOW}dmt run${NC} and observe the error output."
    printf "\n${RED}${msg}${NC}\n\n"
    "$node_path" "$DMT_CORE/node/notify/cli/push_notify.js" highPriority "${msg}"
  fi

  cd "$cwd"
}

function manage_daemons {
  local command="$1"
  local proc=$DEFAULT_DAEMON
  if [ -n "$2" ]; then
    proc="$2"
  fi
  manage_daemon "$command" "$proc"
}

function assure_unique_manager_instance {
  proc=$(ps -ef | grep "manager.js" | grep "dmt-proc" | grep -v grep | awk '{print $2}')

  if [ -n "$proc" ]; then
    printf "${YELLOW}dmt-proc manager is already running... please wait for it to finish or kill it if stuck${NC}\n"
    exit 1
  fi
}

